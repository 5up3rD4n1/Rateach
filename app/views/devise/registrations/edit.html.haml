#rootwizard
  %label#user-id{style: 'display: none'}= current_user.id
  %ul
    - if current_user.provider==nil
      %li
        %a{"data-toggle" => "tab", :href => "#tab0"} Informacion Personal
    - if current_user.manager==true
      %li
        %a{"data-toggle" => "tab", :href => "#tab1", :class =>"filter-status",:value => "pending"} Administrar Profesores Pendientes
      %li
        %a{"data-toggle" => "tab", :href => "#tab2", :id =>"manage-users"} Administrar Cursos Pendientes

  .tab-content
    #tab0.tab-pane
    #tab1.tab-pane
    #tab2.tab-pane

%script
  $('#rootwizard').bootstrapWizard({'tabClass': 'nav nav-pills'});