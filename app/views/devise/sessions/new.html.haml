
.row
  .col-md-4.col-md-offset-4
    .well.sign_in_form
      %h2 Iniciar Sesion
      = form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-group") do |f|
        .form-group
          %label.control-label Correo
          = f.email_field :email,autofocus: true, :class => "form-control", maxlength: "60"

        .form-group
          %label.control-label Contrasena
          %br/
          = f.password_field :password, :class => "form-control", autocomplete: "off"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :Recordarme
        .actions
          = f.submit "Iniciar sesion", :class => "btn btn-default final-button"
      = render "devise/shared/links"
