
.row
  .col-md-10
    %h1 Lista de escuelas
  .col-md-2
    = link_to "Atras" , root_path , {:class => "btn btn-default pull-right"}

%label#uid.hidden= params[:university_id]
%ul.faculties
  - @faculties.each do |faculty|
    %li
      %span= faculty.name
      = link_to "Ver profesores",  faculty_teachers_path(:faculty_id => "#{faculty.id}") , {:class => "btn btn-default show-teachers"}
      = link_to "Ver cursos", faculty_courses_path(:faculty_id => "#{faculty.id}"), {:class=> "btn btn-default show-courses"}

