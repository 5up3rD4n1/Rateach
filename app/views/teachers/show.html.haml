.modal.fade.bs-example-modal-lg#evaluationModal{"aria-hidden" => "true", "aria-labelledby" => "myLargeModalLabel", :role => "dialog", :tabindex => "-1"}
  %button#submit-comment.btn.btn-sm.btn-default.pull-right Comentar
%div.row
  %div.container
    %div.col-md-12
      %div.teacher-info
        %label.hidden#teacher-id= @teacher.id
        - if user_signed_in?
          - if @teacher.evaluated
            %button.btn.btn-default.pull-right#evaluate-teacher Evaluar Profesor
          - else
            %button.btn.btn-default.pull-right#evaluate-teacher.disabled Evaluar Profesor
        %h2 Profesor
        %p.teacher-full-name  #{@teacher.name} #{@teacher.last_name}


%div.row
  %div.container
    %div.col-md-12
      %div.teacher-comments
        %h2 Comentarios para #{@teacher.name}
        %ul
          - @teacher.teacher_comments.each do |comment|
            %li
              %span #{comment.user_name} #{comment.created_at.strftime('%d %b %Y %I:%M %p') }
              %p #{comment.content}

/%script{src: '/assets/teachers.js'}